import javax.swing.*;
import java.awt.*;

public class OperationPanel extends JPanel {

	OperationPanel() {
		setBackground(Color.PINK);

		JButton b1 = new JButton();
		b1.setText("+");
		add(b1);

		JButton b2 = new JButton();
		b2.setText("-");
		add(b2);

		JButton b3 = new JButton();
		b3.setText("*");
		add(b3);
		
		

	}
}
